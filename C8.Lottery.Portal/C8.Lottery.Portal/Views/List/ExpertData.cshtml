        @if (dailyList != null && dailyList.Count>0)
        {
            <table width="100%" border="0" class="Ranking_table1">
                <tbody>
                    @foreach (var item in dailyList)
                    {
                        <tr>

                            <td width="10%" align="center" valign="middle">
                                @if (item.Rank == 1)
                                {
                                    <img src="/images/44_1.png" class="Ranking_Btu" />
                                }
                                else if (item.Rank == 2)
                                {
                                    <img src="/images/44_2.png" class="Ranking_Btu" />
                                }
                                else if (item.Rank == 3)
