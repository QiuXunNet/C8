    <div class="hjc_hdNav">
        <div class="hdNav_cai_collect">
            <div class="hdNav_cai_lhs_expand"><img src="~/images/icon-expand.png"></div>
            <ul class="hdNav_cai_lhs">
                @if (Model.LotteryType != null)
                {
                    foreach (var item in Model.LotteryType)
                    {
                        if (Model.LotteryType.IndexOf(item) == 0)
                        {
                            <li class="current" data-id="@item.Id"><a href="javascript:;">@item.Name</a></li>
                        }
                        else
                        {
                            <li data-id="@item.Id"><a href="javascript:;">@item.Name</a></li>
                        }


                    }
                }

                <div style="clear:both;"></div>
            </ul>
        </div>
        <div class="hdNav_cai_expand" style="display:none">
            @*<div class="hdNav_cai_title">
                    <span>切换分类</span>
                    <span class="collect"><img src="~/images/icon-collect.png" alt="" /></span>
                </div>*@
            <ul class="hdNav_cai">
                @if (Model.LotteryType != null)
                {
                    foreach (var item in Model.LotteryType)
                    {
                        if (Model.LotteryType.IndexOf(item) == 0)
                        {
                            <li class="current" data-id="@item.Id"><a href="javascript:;">@item.Name</a></li>
                        }
                        else
