                            <li data-id="@item.Id"><a href="javascript:;">@item.Name</a></li>
                        }
                    }
                }
                <div style="clear:both;"></div>
            </ul>
        </div>
    </div>
    <div class="gaoshou" style="margin-top:85px;">
        <div class="GS_box" id="lottery_type">

            @if (Model.LotteryType != null)
            {
                foreach (var item in Model.LotteryType)
                {
                    if (Model.LotteryType.IndexOf(item) == 0)
                    {
                        <ul id="ul_@item.Id" data-index="@item.Id" class="GS_nav">
                            @Html.Action("GetLottery", "Personal", new { ltype = Convert.ToInt32(item.Id) })
                        </ul>
                    }
                    else
                    {
                        <ul id="ul_@item.Id" data-index="@item.Id" class="GS_nav" style="display:none;">
                            @Html.Action("GetLottery", "Personal", new { ltype = Convert.ToInt32(item.Id) })
                        </ul>

                    }

                }

            }
            <div style="clear:both;"></div>
        </div>
        <a href="javascript:;" class="GS_btn"><img src="~/images/50.png"></a>
    </div>
    <div class="wrapper-container">


        @if (Model.Lottery != null)
        {
            foreach (var item in Model.Lottery)
            {
                string name = Convert.ToString(item.PId.ToString() + item.lType.ToString());

                if (Model.Lottery.IndexOf(item) == 0)
                {

                    <div class="Grades Grades_@name">
                        @Html.Action("GetIntegralRule", "Personal", new { ltype = Convert.ToInt32(item.lType), Pid = item.PId })

                    </div>
                }
                else
                {
                    <div class="Grades Grades_@name" style="display:none">
                        @Html.Action("GetIntegralRule", "Personal", new { ltype = Convert.ToInt32(item.lType), Pid = item.PId })

                    </div>

                }

            }
        }
    </div>
    <div class="mask" style="display:none;"></div>
