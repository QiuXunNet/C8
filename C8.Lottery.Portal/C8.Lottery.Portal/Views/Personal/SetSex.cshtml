@model C8.Lottery.Model.UserInfo
@{
    ViewBag.Title = "SetSex";
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=yes">
    <title>个人中心-设置-设置性别</title>
    <link rel="stylesheet" type="text/css" href="~/css/style.css" />
    <script src="~/js/jquery-1.8.3.min.js"></script>
    <link href="~/css/dialog.css" rel="stylesheet" />
    <script src="~/js/dialog.min.js"></script>
    <script src="~/js/yjp.js"></script>

    <script>
        $(function () {

            set();
        });

        function set()
        {
            $("#btnsub").click(function ()
            {
                var selectvalue = $(".current").text().trim();
                var sexvalue;
            
                if (selectvalue == "男")
                {
                    sexvalue = 0;
                } else
                {
                    sexvalue = 1;
                }
                $.post('/Personal/EditUser', { value: sexvalue, type: 3 }, function (data) {
                    if (data.Success != true) {
                        alertmsg(data.Msg);
                    } else {
                        location.href = '/Personal/Set';
                    }
                });
             
            });
        }

    </script>
</head>

<body style="background:#F4F4F5;">

    <header class="hjc_header">
        <a href="/Personal/Set" class="hjc_back"></a>
        <a href="javascript:;" class="hjc_logo">设置性别</a>
    </header>

    <div class="Set_Box">
        <ul class="Set_Bul1 Set_Bxbul">
           
            @if (Model.Sex == 0)
            {
                <li class="current">
                    <p class="Bul1_font">男</p><i class="Bul1_XB"></i>
                </li>

                <li>
                    <p class="Bul1_font">女</p><i class="Bul1_XB"></i>
                </li>
            }
            else
            {
                <li>
                    <p class="Bul1_font">男</p><i class="Bul1_XB"></i>
                </li>

                <li class="current">
                    <p class="Bul1_font">女</p><i class="Bul1_XB"></i>
                </li>
            }

           
       
         </ul>
    </div>
    <div class="DL_info2">
        <input type="button" id="btnsub" class="DL_if2btn" value="提交">
    </div>

</body>
</html>