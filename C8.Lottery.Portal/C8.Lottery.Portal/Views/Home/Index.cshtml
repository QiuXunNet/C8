@using C8.Lottery.Public
@using C8.Lottery.Model
@{
    Layout = null;
    UserInfo user = ViewBag.UserInfo;
    SiteSetting site = ViewBag.SiteSetting;

    List<News> newsList = ViewBag.NewsList as List<News>;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=yes">
    <title>@site.Name</title>
    <meta name="keywords" content="@site.KeyWord">
    <meta name="description" content="@site.Description">
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <link href="/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href="~/css/c8-icon.css" rel="stylesheet" />
    <script type="text/javascript" src="/js/jquery-1.8.3.min.js"></script>
    <script type="text/javascript" src="/js/yjp.js"></script>
    <script type="text/javascript" src="/js/runTime3.js"></script>
    <script type="text/javascript" src="/js/baidu-statistics.js"></script>
</head>
<body>
    <header class="hjc_header" style="text-align:left;">
        <a href="javascript:;" class="home_logo"><img src="@(string.IsNullOrEmpty(site.LogoPath)?"/images/03.png":site.LogoPath)"></a>
        <div class="hjc_hdDZ">
            @if (user == null)
            {
                <a href="/Home/Login">登录</a>
                <a href="/Home/Register">注册</a>
            }
            else
            {
                <a href="/Personal/Index">Hi,@user.Name</a>
                <a href="/Personal/logOut">退出</a>
            }
        </div>
    </header>
    <div class="" style="margin-top:50px;">
        <ul class="hdNav_ul">
            <li>
                <a href="/Home/Open">
                    <i><img src="/images/grids_icon_01.png"></i>
                    <p>开奖</p>
                </a>
            </li>
            <li>
                <a href="javascript:;">
                    <i><img src="/images/grids_icon_02.png"></i>
                    <p>走势</p>
                </a>
            </li>
            <li>
                <a href="/Home/Plan">
                    <i><img src="/images/grids_icon_03.png"></i>
                    <p>计划</p>
                </a>
            </li>
            <li>
                <a href="/List/Index">
                    <i><img src="/images/grids_icon_04.png"></i>
                    <p>排行</p>
                </a>
            </li>
            <li>
                <a href="/Talking/Index">
                    <i><img src="/images/grids_icon_05.png"></i>
                    <p>聊天</p>
                </a>
            </li>
            <li>
                <a href="/List/Expert">
                    <i><img src="/images/grids_icon_06.png"></i>
                    <p>高手</p>
                </a>
            </li>
            <li>
                <a href="/News/Index/2">
                    <i><img src="/images/grids_icon_07.png"></i>
                    <p>资讯</p>
                </a>
            </li>
            <li>
                <a href="/Home/down">
                    <i><img src="/images/grids_icon_08.png"></i>
                    <p>App</p>
                </a>
            </li>
            <div style="clear:both;"></div>
        </ul>

    </div>
    <div class="hjc_CZQieBox">
        <div class="hdNav_cai_collect" style="display: block;">
            <div class="hdNav_cai_lhs_expand"><img src="/images/icon-expand.png"></div>
            <ul class="hdNav_cai_lhs">
                <div style="clear:both;"></div>
            </ul>
        </div>
        <div class="hdNav_cai_expand" style="border-bottom: 1px solid rgb(238, 238, 238); display: none;">
            <ul class="hdNav_cai">
                <div style="clear:both;"></div>
            </ul>
        </div>
    </div>
    <div style="height:500px; display:none" id="kongbaiDiv"></div>
    <div class="hjc_indexmain">
    </div>
    <div class="hjc_news_lhs">
        <div class="hjc_news_title" style="text-align:left;">
            <span class="icon-fire hjc_news_title_info">精彩资讯</span>
            <a style="color:#f13131;float:right;" href="/News/Index/2">更多</a>
        </div>
        @if (newsList != null)
        {
            foreach (var newse in newsList)
            {
                <div class="hjc_news_content">
                    @if (newse.ThumbListStr == "" || newse.ThumbStyle == 0)
                    {
                        //无图
                        <a href="/News/NewsDetail/@newse.Id">
                            <div class="hjc_news">
                                <div class="hjc_news_subject">@newse.FullHead</div>
                                <div class="newstime">
                                    <span>@site.WebName</span>
                                    <span>@newse.ReleaseTimeStr</span>
                                    <span>@newse.CommentCount<i class="icon-comment"></i></span>
                                </div>
                            </div>
                        </a>
                    }
                    else if (newse.ThumbStyle == 1)
                    {
                        //一张小图
                        <a href="/News/NewsDetail/@newse.Id">
                            <div class="hjc_news_left">
                                <div class="hjc_news_subject">@newse.FullHead</div>
                                <div class="newstime">
                                    <span>@site.WebName</span>
                                    <span>@newse.ReleaseTimeStr</span>
                                    <span>@newse.CommentCount<i class="icon-comment"></i></span>
                                </div>
                            </div>
                            <div class="hjc_news_right">
                                @if (newse.ThumbListStr.Split('!').Length > 0)
                                {
                                    <img src="@newse.ThumbListStr.Split('!')[0]" alt="@newse.FullHead" />
                                }
                            </div>
                        </a>
                        <div class="clearfix"></div>
                    }
                    else if (newse.ThumbStyle == 2)
                    {
                        //一张大图
                        <a href="/News/NewsDetail/@newse.Id">
                            <div class="hjc_news">
                                <div class="hjc_news_subject">@newse.FullHead</div>
                                <div class="hjc_news_thumb">
                                    <ul class="col_1">
                                        @foreach (var thumb in newse.ThumbListStr.Split('!'))
                                        {
                                            <li><img src="@thumb" alt="@newse.FullHead" /></li>
                                        }
                                    </ul>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="newstime">
                                    <span>@site.WebName</span>
                                    <span>@newse.ReleaseTimeStr</span>
                                    <span>@newse.CommentCount<i class="icon-comment"></i></span>
                                </div>
                            </div>
                        </a>
                    }
                    else if (newse.ThumbStyle == 3)
                    {
                        <a href="/News/NewsDetail/@newse.Id">
                            <div class="hjc_news">
                                <div class="hjc_news_subject">@newse.FullHead</div>
                                <div class="hjc_news_thumb">
                                    <ul class="col_3">
                                        @foreach (var thumb in newse.ThumbListStr.Split('!'))
                                        {
                                            <li><img src="@thumb" alt="@newse.FullHead" /></li>
                                        }
                                    </ul>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="newstime">
                                    <span>@site.WebName</span>
                                    <span>@newse.ReleaseTimeStr</span>
                                    <span>@newse.CommentCount<i class="icon-comment"></i></span>
                                </div>
                            </div>
                        </a>
                    }
                    else
                    {
                        <a href="/News/NewsDetail/@newse.Id">
                            <div class="hjc_news">
                                <div class="hjc_news_subject">@newse.FullHead</div>
                                <div class="">
                                    <span>@site.WebName</span>
                                    <span>@newse.ReleaseTimeStr</span>
                                    <span>@newse.CommentCount<i class="icon-comment"></i></span>
                                </div>
                            </div>
                        </a>
                    }
                </div>
            }
        }
    </div>
    @Html.Partial("Footer")
    <script type="text/javascript">
        $(function () {
            $.post("/Home/GetFatherLotteryType", {}, function (data) {
                if (data != null && data.length != 0) {
                    var lis = "";
                    var uls = "";

                    $(data).each(function (i) {
                        if (i == 0) {
                            lis += "<li data-Id='" + this.Id + "' class = 'current'><a href='javascript:;'>" + this.Name + "</a></li>";
                            uls += "<ul class='ind_mainUl2' id='mainUl2" + this.Id + "'></ul>"
                        }
                        else {
                            lis += "<li data-Id='" + this.Id + "'><a href='javascript:;'>" + this.Name + "</a></li>";
                            uls += "<ul class='ind_mainUl2' id='mainUl2" + this.Id + "' style='display: none;'></ul>"
                        }
                    });

                    $(".hdNav_cai_lhs,.hdNav_cai").prepend(lis);
                    $(".hjc_indexmain").append(uls);

                    getChildLotteryType($(".hdNav_cai_lhs").find(".current").attr("data-Id"));
                }
            });
        });

        function getChildLotteryType(pId) {
            if ($.trim($("#mainUl2" + pId).html()).length != 0)
                return;
            $("#kongbaiDiv").show();
            $.post("/Home/GetChildLotteryType", { pId: pId }, function (data) {
                var lis = "";
                $(data).each(function () {
                    lis += "<li>";
                    lis += "     <div class='UL2_hd'>";
                    lis += "         <a href='javascript:;'>";
                    lis += "             <div class='UL2_hdtu f-l'><img src='/images/" + this.ShowIconName + ".png'></div>";
                    lis += "             <div class='UL2_hdtit'><h3>" + this.ShowTypeName + "</h3></div>";
                    lis += "             <span class='UL2_hdicon'></span>";
                    lis += "         </a>";
                    lis += "     </div>";
                    lis += "     <div class='UL2_bd'>";
                    lis += "         <div class='UL3_bdinfo1'>";
                    lis += "           <p lType='" + this.lType + "'>";
                    lis += "                 <font>第<span>" + this.Issue + "</span>期</font>";
                    lis += "                 <font>下期开奖：";
                    if (this.ShowOpenTime == "正在开奖" || this.ShowOpenTime == "休奖时间") {
                        lis += "                 <span>" + this.ShowOpenTime + "</span>";
                    }
                    else {
                        var arr = this.ShowOpenTime.split('&');
                        lis += "                 <span><t class='hour'>" + arr[0] + "</t>:<t class='minute'>" + arr[1] + "</t>:<t class='second'>" + arr[2] + "</t></span>";
                    }

                    lis += "                   </font>";
                    lis += "             </p>";
                    lis += "         </div>";
                    lis += "         <div class='UL3_bdinfo2'>";
                    lis += "             <div class='ball_wrap'>";

                    lis += getHtml(this);

                    lis += "              </div>";
                    //lis+="             <div class='UL3_ZZKJ'>";
                    //lis+="                 <p>正在开奖中...</p>";
                    //lis+="             </div>";
                    lis += "         </div>";
                    lis += "         <div class='UL3_bdinfo3'>";
                    lis += "          <a href='/Plan/Index/" + this.lType + "' class='UL2_baif3a'>计划</a>";
                    lis += "          <a href='/Record/OpenRecord/?lType=" + this.lType + "' class='UL2_baif3a'>历史</a>";
                    lis += "          <a href='/Plan/Post/" + this.lType + "' class='UL2_baif3a'>发帖</a>";
                    lis += "          <a href='/Plan/Index/" + this.lType + "?cur=2' class='UL2_baif3a'>排行</a>";
                    lis += "          <a href='/News/Index/Tool.GetLotterylType(" + this.lType + ")' class='UL2_baif3a'>资讯</a>";
                    lis += "             <div style='clear: both;'></div>";
                    lis += "         </div>";
                    lis += "     </div>";
                    lis += " </li>";
                });

                $("#mainUl2" + pId).empty().append(lis);
                $("#kongbaiDiv").hide();
            });
        }

        function getHtml(data) {
            var html = "";
            var lType = data.lType;

            var numArr = data.Num.split(',')

            if (lType <= 62 && lType != 5 && lType != 2 && lType != 8 && lType != 4) {
                $(numArr).each(function () {
                    var num = $.trim(this);
                    if (num.length > 0) {
                        html += "<span class='ball_spB ball_red HYJP_Red'>" + num + "</span>";
                    }
                });
            }

            if (lType == 2 || lType == 8) {
                $(numArr).each(function (i) {
                    var num = $.trim(this);
                    if (num.length > 0) {
                        if (i == numArr.length - 1) {
                            html += "<span class='ball_spB ball_red HYJP_Blue'>" + num + "</span>";
                        }
                        else {
                            html += "<span class='ball_spB ball_red HYJP_Red'>" + num + "</span>";
                        }
                    }
                });
            }

            if (lType == 4 ) {
                $(numArr).each(function (i) {
                    var num = $.trim(this);
                    if (num.length > 0) {
                        if (i >= numArr.length - 2) {
                            html += "<span class='ball_spB ball_red HYJP_Blue'>" + num + "</span>";
                        }
                        else {
                            html += "<span class='ball_spB ball_red HYJP_Red'>" + num + "</span>";
                        }
                    }
                });
            }

            if (lType == 5) {
                $(numArr).each(function (i) {
                    var num = $.trim(this);
                    if (num.length > 0) {
                        var color = getColor(num);

                        if (i == numArr.length - 1) {
                            html += "<span class='ball_spB ball_blue HYJP_PcHao'>+</span>";
                        }
                        html += "<span class='ball_spB ball_blue " + color + "'>" + num + "</span>";
                    }
                });
            }

            if (lType == 65) {
                html += "<span class='ball_spB ball_blue HYJP_Red'>" + numArr[0] + "</span>";
                html += "<span class='ball_spB ball_blue HYJP_PcHao'>+</span>";
                html += "<span class='ball_spB ball_blue HYJP_Red'>" + numArr[1] + "</span>";
                html += "<span class='ball_spB ball_blue HYJP_PcHao'>+</span>";
                html += "<span class='ball_spB ball_blue HYJP_Red'>" + numArr[2] + "</span>";
                html += "<span class='ball_spB ball_blue HYJP_PcHao'>=</span>";
                html += "<span class='ball_spB ball_blue HYJP_Red'>" + (Number(numArr[0]) + Number(numArr[1]) + Number(numArr[2])) + "</span>";
            }
            if (lType == 63 || lType == 64) {
                $(numArr).each(function () {
                    var num = $.trim(this);
                    if (num.length > 0) {
                        var clazz = "ball_spA No" + num;
                        html += "<span class='" + clazz + "'>" + num + "</span>";
                    }
                });
            }

            return html;
            //case "red":
            //    ys = "HYJP_LhRed";
            //    break;
            //case "blue":
            //    ys = "HYJP_LhBlue";
            //    break;
            //case "green":
            //    ys = "HYJP_LhGreen";
            //    break;
        }
    </script>
</body>
@{Html.RenderAction("index", "PvUvIp");}
</html>
