    <div class="hjc_indexmain" style="margin-top:91px;">
        @foreach (LotteryType2 lotteryType in ViewBag.list)
        {
            int[] lTypeArr = lotteryType.SonIdArr;

            <ul class="ind_mainUl2">

                @for (int j = 0; j < lTypeArr.Length; j++)
                {
                    int i = lTypeArr[j];

                    lType = i;
                    record = list[i - 1];
                    string iconName = record.ShowIconName + ".png";
                    string[] numArr = record.Num.Split(',');

                    <li>
                        <div class="UL2_hd">
                            <a href="javascript:;">
                                <div class="UL2_hdtu f-l"><img src="/images/@iconName"></div>
                                <div class="UL2_hdtit"><h3>@record.ShowTypeName</h3></div>
                                <span class="UL2_hdicon"></span>
                            </a>
                        </div>
                        <div class="UL2_bd">
                            <div class="UL3_bdinfo1">
                                <p lType="@record.lType">
                                    <font>第<span>@record.Issue</span>期</font>
                                    <font>
                                        下期开奖：

                                        @if (record.ShowOpenTime == "正在开奖")
                                        {
                                            <span>正在开奖</span>
                                        }
                                        else
                                        {
                                            string openTime = record.ShowOpenTime;
                                            string[] timeArr = openTime.Split('&');

                                            string hour = timeArr[0];
                                            string min = timeArr[1];
                                            string sec = timeArr[2];

                                            <span><t class="hour">@hour</t>:<t class="minute">@min</t>:<t class="second">@sec</t></span>
                                        }
                                    </font>
                                </p>
                            </div>
                            <div class="UL3_bdinfo2">
                                <div class="ball_wrap">

                                    @if (lType <= 62 && lType != 5 && lType != 2 && lType != 8 && lType != 4)
                                    {
                                        foreach (string s in numArr)
                                        {

                                            <span class="ball_spB ball_red HYJP_Red">@s</span>

                                        }
                                    }
                                    else if (lType == 2)
                                    {
                                        int x = -1;
                                        foreach (string s in numArr)
                                        {
                                            x++;
                                           

                                            if (x == 6)
                                            {
                                                <span class="ball_spB ball_red HYJP_Blue">@s</span>
                                            }
                                            else
                                            {
                                                <span class="ball_spB ball_red HYJP_Red">@s</span>
                                            }

                                        }
                                    }
                                    else if (lType == 4)
                                    {
                                        int x1 = -1;
                                        foreach (string s in numArr)
                                        {
                                            x1++;


                                            if (x1 == 5 || x1 == 6)
                                            {
                                                <span class="ball_spB ball_red HYJP_Blue">@s</span>
                                            }
                                            else
                                            {
                                                <span class="ball_spB ball_red HYJP_Red">@s</span>
                                            }

                                        }


                                    }
                                    else if (lType == 5)
                                    {

                                        int x3 = -1;
                                        foreach (string s in numArr)
                                        {
                                            x3++;
                                            string Color = Util.GetColor(s);
                                            string ys = string.Empty;
                                            switch (Color)
                                            {
                                                case "red":
                                                    ys = "HYJP_LhRed";
                                                    break;
                                                case "blue":
                                                    ys = "HYJP_LhBlue";
                                                    break;
                                                case "green":
                                                    ys = "HYJP_LhGreen";
                                                    break;
                                            }
                                            if (x3 == 6)
                                            {
                                                <span class="ball_spB ball_blue HYJP_PcHao">+</span>

                                            }
                                            <span class="ball_spB ball_blue @ys">@s</span>
                                        }
                                    }
                                    else if (lType == 8)
                                    {
                                        int x2 = -1;
                                        foreach (string s in numArr)
                                        {
                                            x2++;


                                            if (x2 == 7)
                                            {
                                                <span class="ball_spB ball_red HYJP_Blue">@s</span>
                                            }
                                            else
                                            {
                                                <span class="ball_spB ball_red HYJP_Red">@s</span>
                                            }
                                        }
                                    }
                                    else if (lType == 65)
                                    {
                                        int a = int.Parse(numArr[0]);
                                        int b = int.Parse(numArr[1]);
                                        int c = int.Parse(numArr[2]);
                                        int sum = a + b + c;


                                        <span class="ball_spB ball_blue HYJP_Red">@numArr[0]</span>
                                        <span class="ball_spB ball_blue HYJP_PcHao">+</span>
                                        <span class="ball_spB ball_blue HYJP_Red">@numArr[1]</span>
                                        <span class="ball_spB ball_blue HYJP_PcHao">+</span>
                                        <span class="ball_spB ball_blue HYJP_Red">@numArr[2]</span>
                                        <span class="ball_spB ball_blue HYJP_PcHao">=</span>
                                        <span class="ball_spB ball_blue HYJP_Red">@sum</span>
                                    }
                                    else if (lType == 63 || lType == 64)
                                    {
                                        foreach (string s in numArr)
                                        {
                                            string clazz = "ball_spA No" + s;
                                            <span class="@clazz">@s</span>
                                        }
                                    }

                                </div>
                                <div class="UL3_ZZKJ">
                                    <p>正在开奖中...</p>
                                </div>
                            </div>
                            <div class="UL3_bdinfo3">
                                <a href="/Plan/Index/@record.lType" class="UL2_baif3a">计划</a>
                                @*<a href="javascript:;" class="UL2_baif3a">双面</a>
