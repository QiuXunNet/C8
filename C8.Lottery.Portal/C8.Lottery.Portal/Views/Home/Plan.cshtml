                                <div class="UL2_hdtu f-l"><img src="/images/@logo"></div>
                                <div class="UL2_hdtit">
                                    <h3>@Util.GetLotteryTypeName(i)</h3>
                                </div>
                                <span class="UL2_hdicon"></span>
                            </a>
                        </div>
                    </li>
                    
                }



            </ul>
            
            @*其他*@
            <ul class="list_mainUl2">
                
                
                @for (int i = 1; i < 9; i++)
                {
                    string logo = Util.GetLotteryIcon(i) + ".png";
                    
                    <li>
                        <div class="UL2_hd">
                            <a href="/Plan/Index/@i">
                                <div class="UL2_hdtu f-l"><img src="/images/@logo"></div>
                                <div class="UL2_hdtit">
                                    <h3>@Util.GetLotteryTypeName(i)</h3>
                                </div>
                                <span class="UL2_hdicon"></span>
                            </a>
                        </div>
                    </li>
                    
                }
                
                
                
                @for (int i = 60; i < 63; i++)
                {
                    string logo = Util.GetLotteryIcon(i) + ".png";
                    
                    <li>
                        <div class="UL2_hd">
                            <a href="/Plan/Index/@i">
                                <div class="UL2_hdtu f-l"><img src="/images/@logo"></div>
                                <div class="UL2_hdtit">
                                    <h3>@Util.GetLotteryTypeName(i)</h3>
                                </div>
                                <span class="UL2_hdicon"></span>
                            </a>
