                                </div>
                                <span class="UL2_hdicon"></span>
                            </a>
                        </div>
                    </li>
                    
                }



            </ul>

            
            @*快乐十分*@
            <ul class="list_mainUl2">
                
                
                @for (int i = 51; i < 60; i++)
                {
                    string logo = Util.GetLotteryIcon(i) + ".png";
                    
                    <li>
                        <div class="UL2_hd">
